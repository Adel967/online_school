        <% if(projects && projects.length > 0) { %> 
            <% projects.forEach(project => { %>
                <div class="col-md-4">
                  <div class="card mb-3">
                    <% if (project.imageLink) { %>
                      <img src="<%= project.imageLink %>" class="card-img-top" alt="project image">
                    <% } %>
                    <div class="card-body">
                      <h5 class="card-title"><%= project.title %></h5>
                      <p class="card-text"><%= project.description %></p>
                      <% if (project.videoLink) { %>
                        <a href="<%= project.videoLink %>" target="_blank" class="btn btn-sm btn-outline-secondary">فيديو</a>
                      <% } %>
                      <% if (project.link) { %>
                        <a href="<%= project.link %>" target="_blank" class="btn btn-sm btn-outline-secondary">زيارة</a>
                      <% } %>
                      <a href="/admin/student-projects/<%= project.id %>/edit" class="btn btn-sm btn-warning">تعديل</a>
                      <form method="POST" action="/admin/student-projects/<%= project.id %>/delete" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
        <% } else {%>
          <h2>لا يوجد مشاريع</h2>
