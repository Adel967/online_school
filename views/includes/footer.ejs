<footer class="bg-dark text-white pt-5 pb-4">
  <div class="container text-center text-md-start">
    <div class="row text-center text-md-start">
      
      <!-- Logo & Description -->
      <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mt-3">
        <img src="/images/school_logo1.png" alt="Logo" style="width: 150px" class="mb-3" />
        <p><%= __('footer.description') %></p>
      </div>

      <!-- Quick Links -->
      <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
        <h5 class="mb-4 fw-bold text-white"><%= __('footer.quickLinksTitle') %></h5>
        <p><a href="#" class="text-white text-decoration-none"><%= __('footer.links.home') %></a></p>
        <p><a href="#" class="text-white text-decoration-none"><%= __('footer.links.whatWeOffer') %></a></p>
        <p><a href="#" class="text-white text-decoration-none"><%= __('footer.links.paths') %></a></p>
        <p><a href="#" class="text-white text-decoration-none"><%= __('footer.links.projects') %></a></p>
      </div>

      <!-- Contact -->
      <div class="col-md-5 col-lg-5 col-xl-5 mx-auto mt-3">
        <h5 class="mb-4 fw-bold text-white"><%= __('footer.contactTitle') %></h5>

        <p style="display: inline;">
          <i class="bi bi-telephone-fill me-2"></i>
          <p style="direction: ltr; display: inline;">
            <% if(school.phoneNumber) { %>
              <%= school.phoneNumber %>
            <% } else { %>
              <%= __('footer.notSpecified') %>
            <% } %>
          </p>
        </p>

        <p>
          <i class="bi bi-envelope-fill me-2"></i>
          <% if(school.email) { %>
            <%= school.email %>
          <% } else { %>
            <%= __('footer.notSpecified') %>
          <% } %>
        </p>

        <p>
          <i class="bi bi-geo-alt-fill me-2"></i>
          <% if(school.location) { %>
            <%= school.location %>
          <% } else { %>
            <%= __('footer.notSpecified') %>
          <% } %>
        </p>

        <!-- Social Links -->
        <div class="mt-3">
          <% if(school.facebookLink) { %>
            <a href="<%= school.facebookLink %>" target="_blank" class="text-white me-3">
              <i class="bi bi-facebook fs-4"></i>
            </a>
          <% } %>
          <% if(school.instagramLink) { %>
            <a href="<%= school.instagramLink %>" target="_blank" class="text-white me-3">
              <i class="bi bi-instagram fs-4"></i>
            </a>
          <% } %>
          <% if(school.youtubeLink) { %>
            <a href="<%= school.youtubeLink %>" target="_blank" class="text-white me-3">
              <i class="bi bi-youtube fs-4"></i>
            </a>
          <% } %>
          <% if(school.tiktokLink) { %>
            <a href="<%= school.tiktokLink %>" target="_blank" class="text-white me-3">
              <i class="bi bi-tiktok fs-4"></i>
            </a>
          <% } %>
        </div>
      </div>
    </div>

    <hr class="my-4" />

    <!-- Copyright -->
    <div class="row">
      <div class="col text-center">
        <p class="mb-0">&copy; 2025 <%= school.name %>. <%= __('footer.copyright') %>.</p>
      </div>
    </div>
  </div>
</footer>