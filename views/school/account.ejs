<%- include('../includes/head.ejs') %>
</head>
<body data-bs-spy="scroll" data-bs-target="#navbar">

  <!-- Nav Bar -->
  <%- include('../includes/school_navbar.ejs') %>

  <% if (errorMessage) { %>
    <div id="flash-message" class="alert alert-danger toast-message">
      <%= errorMessage %>
    </div>
  <% } %>

  <% if (successMessage) { %>
    <div id="flash-message" class="alert alert-success toast-message">
      <%= successMessage %>
    </div>
  <% } %>

  <!-- Profile Section -->
  <div class="container my-5">
    <div class="row">
      <!-- Profile Edit Card -->
      <div class="col-lg-6 mb-4">
        <div class="card shadow rounded-4">
          <div class="d-flex justify-content-between align-items-center card-header text-white" style="background-color: #00bfa6">
            <h5 class="mb-0 text-white"><%= __('account.profile') %></h5>
            <a href="/logout" class="btn btn-outline-danger btn-sm fw-bold">
              <i class="bi bi-box-arrow-right me-1"></i> <%= __('account.logout') %>
            </a>
          </div>
          <div class="card-body">
            <form action="/account/edit" method="POST">
              <div class="mb-3">
                <label class="form-label"><%= __('account.first_name') %></label>
                <input type="text" class="form-control" name="firstName" value="<%= user.firstName %>" required />
              </div>
              <div class="mb-3">
                <label class="form-label"><%= __('account.last_name') %></label>
                <input type="text" class="form-control" name="lastName" value="<%= user.lastName %>" required />
              </div>
              <div class="mb-3">
                <label class="form-label"><%= __('account.birth_date') %></label>
                <input type="date" class="form-control" name="birthDate" value="<%= user.birthDate %>" required />
              </div>
              <div class="mb-3">
                <label class="form-label"><%= __('account.email') %></label>
                <input
                  type="email"
                  value="<%= user.email %>"
                  name="email"
                  class="form-control"
                  style=<%= currentLocale === 'ar' ? ' direction: rtl' : 'direction:  ltr' %>
                  placeholder="<%= __('account.email_placeholder') %>"
                  readonly
                />
              </div>
              <div class="mb-3">
                <label class="form-label"><%= __('account.phone_number') %></label>
                <input
                  type="text"
                  class="form-control"
                  name="phoneNumber"
                  value="<%= user.phoneNumber %>"
                  style="direction: ltr"
                  required
                />
              </div>
              <button type="submit" class="btn text-white w-100" style="background-color: #00bfa6">
                <%= __('account.save_changes') %>
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Registered Courses Card -->
      <div class="col-lg-6">
        <div class="card shadow rounded-4">
          <div class="card-header text-white" style="background-color: #00bfa6">
            <h5 class="mb-0 text-white"><%= __('account.registered_courses') %></h5>
          </div>
          <div class="card-body">
            <% if (registrations.length === 0) { %>
              <p class="text-muted"><%= __('account.no_courses') %></p>
            <% } else { %>
              <ul class="list-group list-group-flush">
                <% registrations.forEach(reg => { %>
                  <li class="list-group-item">
                    <strong><%= currentLocale === 'ar' ? reg.course.title_ar : reg.course.title_en %></strong><br />
             
                    <%= __('account.status') %>:
                    <span class="badge bg-secondary"><%= reg.statusLabel %></span><br />
                    <%= __('account.registration_date') %>: <%= reg.formattedDate %><br />
                    <!-- <%= __('account.final_price') %>: <%= reg.finalPrice %> <%= reg.currency %><br />
                    <span><%= __('account.amount_paid') %>: <%= reg.paidAmount %> <%= reg.currency %></span> -->
                  </li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Section -->
  <%- include('../includes/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="/js/flash-message.js"></script>
</body>
</html>
