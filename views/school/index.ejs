<%- include('../includes/head.ejs') %>
  </head>
  <body data-bs-spy="scroll" data-bs-target="#navbar">
    <!-- Nav Bar -->
    <%- include('../includes/school_navbar.ejs') %>
    <% if (errorMessage) { %>
    <div id="flash-message" class="alert alert-danger toast-message">
      <%= errorMessage %>
    </div>
    <% } %>
        <% if (successMessage) { %>
      <div id="flash-message" class="alert alert-success toast-message">
        <%= successMessage %>
      </div>
      <% } %>
    <header class="d-flex flex-column" style="height: 100vh">
      <!-- Hero Section -->

      <section id="hero" class="d-flex align-items-center text-center h-100">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h1 class="display-4 fw-semibold text-white">
                                     
                <%- __('hero.journey') %>
                <!-- خلي <span style="color: #00bfa6">البرمجة</span> لعبتك، وخلي
                <span style="color: #ffd600">المستقبل</span> من صنعك -->
              </h1>
              <h5 class="text-white mt-3 mb-4">
                <%- __('hero.live_courses') %>
              </h5>
              <div
                class="d-flex flex-column align-items-center d-sm-block gap-2"
              >
                <a href="https://wa.me/<%= school.phoneNumber%>" target="_blank" class="btn btn-secondary-outline me-sm-1"
                  > <%= __('hero.book_you_session') %> </a
                >
                <a
                  href="https://wa.me/<%= school.phoneNumber%>"
                  target="_blank"
                  class="btn btn-primary-outline ms-sm-1"
                  > <%= __('hero.contactUs')%></a
                >
              </div>
            </div>
          </div>
        </div>
      </section>
    </header>

    <!-- topics-->
    <section id="topics" class="section-padding text-center border-bottom">
      <div class="container">
        <div class="row">
          <div class="col-12 section-title">
            <h1 class="display-4 fw-semibold"><%= __('topics.whatWeOffer')%></h1>
            <div class="line"></div>
            <p>
              <%= __('topics.learnProgramming')%>
            </p>
          </div>
        </div>

        <div class="row section-content">
          <div class="col-md-3 col-sm-6">
            <i class="bi bi-controller"></i>
            <h5>  <%= __('topics.gameProgramming')%></h5>
          </div>
          <div class="col-md-3 col-sm-6">
            <i class="bi bi-phone"></i>
            <h5>  <%= __('topics.mobileApplications')%></h5>
          </div>
          <div class="col-md-3 col-sm-6">
            <i class="bi bi-code-slash"></i>
            <h5>  <%= __('topics.websiteDesign')%></h5>
          </div>
          <div class="col-md-3 col-sm-6">
            <i class="bi bi-cpu"></i>
            <h5>  <%= __('topics.programmingFund')%></h5>
          </div>
          
        </div>
      </div>
    </section>

    <!--Why Our Academy-->
<section id="why-our-academy" class="section-padding text-center border-bottom">
  <div class="container">
    <div class="row">
      <div class="col-12 section-title">
        <h1 class="display-4 fw-semibold"><%= __('whyAcademy.title') %></h1>
        <div class="line"></div>
        <p><%= __('whyAcademy.description') %></p>
      </div>
    </div>

    <div class="row g-4 justify-content-center">
      <div class="col-md-6 col-lg-4 col-10">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
          <div class="mb-3"><i class="bi bi-cash-stack display-4"></i></div>
          <h5 class="fw-bold mb-3"><%= __('whyAcademy.features.paymentTitle') %></h5>
          <p class="text-muted"><%= __('whyAcademy.features.paymentText') %></p>
        </div>
      </div>

      <div class="col-md-6 col-lg-4 col-10">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
          <div class="mb-3"><i class="bi bi-people-fill display-4"></i></div>
          <h5 class="fw-bold mb-3"><%= __('whyAcademy.features.agesTitle') %></h5>
          <p class="text-muted"><%= __('whyAcademy.features.agesText') %></p>
        </div>
      </div>

      <div class="col-md-6 col-lg-4 col-10">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
          <div class="mb-3"><i class="bi bi-controller display-4"></i></div>
          <h5 class="fw-bold mb-3"><%= __('whyAcademy.features.practicalTitle') %></h5>
          <p class="text-muted"><%= __('whyAcademy.features.practicalText') %></p>
        </div>
      </div>

      <div class="col-md-6 col-lg-4 col-10">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
          <div class="mb-3"><i class="bi bi-person-badge display-4"></i></div>
          <h5 class="fw-bold mb-3"><%= __('whyAcademy.features.trainersTitle') %></h5>
          <p class="text-muted"><%= __('whyAcademy.features.trainersText') %></p>
        </div>
      </div>

      <div class="col-md-6 col-lg-4 col-10">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
          <div class="mb-3"><i class="bi bi-clock-history display-4"></i></div>
          <h5 class="fw-bold mb-3"><%= __('whyAcademy.features.scheduleTitle') %></h5>
          <p class="text-muted"><%= __('whyAcademy.features.scheduleText') %></p>
        </div>
      </div>

      <div class="col-md-6 col-lg-4 col-10">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
          <div class="mb-3"><i class="bi bi-lightbulb display-4"></i></div>
          <h5 class="fw-bold mb-3"><%= __('whyAcademy.features.futureTitle') %></h5>
          <p class="text-muted"><%= __('whyAcademy.features.futureText') %></p>
        </div>
      </div>
    </div>
  </div>
</section>

    <!--Courses-->
  <section id="courses" class="section-padding text-center">
  <div class="container">
      <div class="row">
      <div class="col-12 section-title">
        <h1 class="display-4 fw-semibold"><%=__('courses.our_track')%></h1>
        <div class="line"></div>
        <h5><%=__('courses.under_12')%></h5>

      </div>
    </div>


    <!-- Under 12 -->

    <div class="row d-flex flex-row gx-sm-4 gy-2 align-items-stretch justify-content-center">
      <% if(coursesUnder12 && coursesUnder12.length > 0) { %>
        <% for(let course of coursesUnder12) { %>
          <%- include('../includes/partials/course_card', { course }) %>
        <% } %>
      <% } else { %>
        <p>لا توجد دورات حالياً لهذه الفئة</p>
      <% } %>
    </div>


    <!-- 12 and above -->
    <div class="row mt-5">
      <div class="col-12 section-title">
        <h5> <%=__('courses.above_12')%> </h5>
        <div class="line"></div>
      </div>
    </div>
    <div class="row d-flex flex-row gx-sm-4 gy-2 align-items-stretch justify-content-center">
      <% if(courses12AndAbove && courses12AndAbove.length > 0) { %>
        <% for(let course of courses12AndAbove) { %>
          <%- include('../includes/partials/course_card', { course }) %>
        <% } %>
      <% } else { %>
        <p>لا توجد دورات حالياً لهذه الفئة</p>
      <% } %>
    </div>



  </div>
</section>

    <!--Student Projects-->
    <section id="projects" class="section-padding text-center bg-light">
      <div class="container">
        <div class="row">
          <div class="col-12 section-title">
            <h1 class="display-4 fw-semibold"><%= __('projects.section_title') %></h1>
            <div class="line"></div>
            <p><%= __('projects.section_subtitle') %></p>
          </div>
        </div>
        <div class="row justify-content-center">
          <% if(studentProjects && studentProjects.length > 0) { %>
            <% for(project of studentProjects) { %>
              <div class="col-md-6 col-lg-3 col-9 mb-4">
                <div class="card h-100 shadow-sm border-0 rounded-4 hover-shadow transition">
                  <img src="<%= project.imageLink %>" class="card-img-top rounded-top-4 h-75" alt="Project Image" />
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-semibold">
                      <%= currentLocale === 'ar' ? project.title_ar : project.title_en %>
                    </h5>
                    <p class="card-text text-muted small flex-grow-1">
                      <%= currentLocale === 'ar' ? project.description_ar : project.description_en %>
                    </p>
                    <% if(project.link && project.link.length > 0) { %>
                      <a href="<%= project.link %>" target="_blank" class="mt-auto w-100">
                        <%= __('projects.view_project') %>
                      </a>
                    <% } %>
                  </div>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <h2><%= __('projects.no_projects') %></h2>
          <% } %>
        </div>
      </div>
    </section>
    <!-- Footer Section -->
    <%- include('../includes/footer.ejs') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq"
      crossorigin="anonymous"
    ></script>
    <script src="/js/flash-message.js"></script>
  </body>
</html>
