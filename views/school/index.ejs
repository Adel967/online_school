    <!--Student Projects-->
    <section id="projects" class="section-padding text-center bg-light">
      <div class="container">
        <div class="row">
          <div class="col-12 section-title">
            <h1 class="display-4 fw-semibold">إنجازات طلابنا</h1>
            <div class="line"></div>
            <p>إبداعات حقيقية صنعها طلابنا خلال رحلتهم التعليمية معنا</p>
          </div>
        </div>
        <div class="row justify-content-center">
          <% if(studentProjects && studentProjects.length > 0) { %> <% for(project of studentProjects) {
            %>
            <div class="col-md-6 col-lg-3 col-9 mb-4">
            <div
              class="card h-100 shadow-sm border-0 rounded-4 hover-shadow transition"
            >
              <img
                src="<%= project.imageLink %>"
                class="card-img-top rounded-top-4 h-75"
                alt="Project Image"
              />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-semibold"> <%= project.title %></h5>
                <p class="card-text text-muted small flex-grow-1">
                  <%= project.description %>
                </p>
                <% if(project.link && project.link.length > 0) { %> 
                  <a
                  href="<%= project.link %>"
                  target="_blank"
                  class="mt-auto w-100"
                >
                  عرض المشروع
                </a>
                <%  } %>
         
              </div>
            </div>
          </div>

            <% } %> <% } else {%>
          <h2>لا يوجد مشاريع طلاب</h2>
          <% }%>
       
        </div>
      </div>
    </section>
